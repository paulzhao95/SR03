<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    <package name="default" extends="struts-default">

        <global-results>
            <result name="dataBaseConnectionFailed">test.jsp</result>
        </global-results>
        <global-exception-mappings>
            <exception-mapping exception="dao.DaoException" result="dataBaseConnectionFailed" />
        </global-exception-mappings>


        <action name="signUp" class="action.SignUpAction" method="execute">
            <result name="signUpSucceed">index.jsp</result>
            <result name="signUpFailed">index.jsp</result>
            <result name="dataBaseConnectionFailed">index.jsp</result>

        </action>

        <action name="login" class="action.LoginAction" method="execute">
            <result type="chain" name="administratorLoginSucceed">getUsers</result>
            <result name="internLoginSucceed">test.jsp</result>
            <result name="loginFailed">SignUp.jsp</result>
            <result name="dataBaseConnectionFailed">test.jsp</result>
        </action>

        <action name="getUsers" class="action.administrator.ShowUsersAction" method="execute">
            <result name="success">administrator/User-Topic_List.jsp</result>
            <result name="dataBaseConnectionFailed">test.jsp</result>
        </action>

        <action name="updateUser" class="action.administrator.UpdateUserAction" method="execute">
            <result type="redirectAction" name="updateUserSucceed">getUsers</result>
            <result name="updateUserFailed">test.jsp</result>
        </action>



    </package>

</struts>